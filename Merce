package merce;
/**
 *
 * @author Giulia Evangelisti
 */

public class Merce {

    String colore; 
    double PrezzoUnitario=0;
    
    
    /* Di seguito abbiamo tutti i metodi set e get necessari per accedere agli attributi della classe Merce */
    

    public void setcolore(String c){
        colore=c; 
    }
    public String getcolore(){
        return this.colore;
    }
    
    public void setPU(double pu){
        this.PrezzoUnitario=pu;
    }
    
    public double getPU(){
        return this.PrezzoUnitario;
    }
    
    /*Costruttore con parametri */
    public Merce(String colore, double pu){
        this.colore=colore;
        this.PrezzoUnitario=pu;
    }
    
    /* Costruttore senza paramentri, inizializza la variabile a -1 */
    public Merce(){
        this.colore="Bianco";
        this.PrezzoUnitario=0;
        
    }}
