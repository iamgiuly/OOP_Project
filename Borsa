package abbigliamento;

/**
 *
 * @author Giulia Evangelisti
 */
public class Borsa extends Abbigliamento {
    private modello model;

    public enum modello {Tracolla, Zaino, Notdefined}
    
    public void setMod(String m){  //setto il modello, ricordando che in Java enum Ã¨ una vera e propria classe
        this.model=modello.valueOf(m);
    }
    public void getMod(){
        System.out.println(model);
    }
    
    /*Costruttore senza parametri */
    public Borsa()
    {
        this.prezzobase=0;
        this.genere="notdefined";
        this.materiale="cotone";
        this.NrPers=0;
        this.Pers=false;
        this.model=modello.Notdefined;
        this.Tipostampa="Notdefined";
        this.PrezzoUnitario=0;
    }
    
    /* Costruttore con parametri */
    public Borsa(String g, String m, int nrpers, boolean p, float pb, String mo, String color, String tipo, float pu){
    this.genere=g;
    this.materiale=m;
    this.NrPers=nrpers;
    this.Pers=p; 
    this.prezzobase=pb;
    this.model=modello.valueOf("mo");
    this.colore=color;
    this.Tipostampa=tipo;
    this.PrezzoUnitario=pu;
    
    }
    
    
    public double CalcoloPU(String m, int nrpers, boolean p, String mo, String color, String tipo){
    if (!"Bianco".equals(color))
            this.PrezzoUnitario+=1.00;
    else if (p==true){
         if(tipo=="Serigrafia")
             PrezzoUnitario+=2.00*nrpers;
         if(tipo=="Transfer")
             PrezzoUnitario+=3.00*nrpers;
         if(tipo=="Digitale")
             PrezzoUnitario+=4.00*nrpers;
    }
    else if ("Zaino".equals(mo)){
        PrezzoUnitario+=3.00;}
    return PrezzoUnitario;
        }
        
    }
    
