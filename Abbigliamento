package abbigliamento;
import merce.*; 

/**
 *
 * @author Giulia Evangelisti
 */
public class Abbigliamento extends Merce { 

String genere;
String materiale;
boolean Pers;
int NrPers; 
float prezzobase;


public void setGenere(String gen)
{
    this.genere=gen;
}
public void getGenere()
{
    System.out.println(genere);
}
public void setMateriale(String m){
    this.materiale=m;
   
}
public void getMateriale(){
    System.out.println(this.materiale);
}

public void setPrezzoBase(float pb)
    {
        prezzobase=pb;
    }
    public void getPrezzoBase()
    {
        System.out.println(prezzobase);
    }
public void setNumPers(boolean p, int num){
        if (p==true && num<=8)
            NrPers=num; 
        else if (num>8)
            System.out.println("Non e' possibile applicare pi√π di 8 personalizzazioni"); 
                    else if(p==false)
                        System.out.println("Non sono previste personalizzazioni");}

public void getNumPers(){
        System.out.println(NrPers);
    }

public Abbigliamento()
{ 
    genere="";
    materiale="";
    NrPers=0;
    Pers=false; 
    prezzobase=0;
}
public Abbigliamento(String g, String m, int nrpers, boolean p, float pb)
{
    
    genere=g;
    materiale=m;
    NrPers=nrpers;
    Pers=p; 
    prezzobase=pb;
}
}
