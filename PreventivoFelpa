package ordini;
import abbigliamento.*;
/**
 *
 * @author Giulia Evangelisti
 */
public class PreventivoFelpa {
    double parzialeFelpa;
    Felpa felpa;
    
    public PreventivoFelpa(){
        this.parzialeFelpa=0;
    }
    
    public double ParzialeFelpa (int nrpers, boolean p, String color, String tipo, boolean cern, boolean capp, boolean tasche){
        felpa = new Felpa();
        parzialeFelpa+=felpa.CalcoloPU(nrpers, p, color, tipo, cern, capp, tasche);
    return parzialeFelpa;
    }
}
