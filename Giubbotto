package abbigliamento;

/**
 *
 * @author Giulia Evangelisti
 */
public class Giubbotto extends Abbigliamento {
    
    public Giubbotto()
    {
        this.genere="NotDefined";
        this.materiale="Cotone";
        this.Pers=false;
        this.NrPers=0;
        this.colore="Bianco";
        this.prezzobase=0;
        this.Tipostampa="Notdefined";
        this.PrezzoUnitario=0;
    }
    public Giubbotto (String g, String m, boolean p, int np, String color, int pb, String tipo, float pu)
    {
        this.genere=g;
        this.materiale=m;
        this.Pers=p;
        this.NrPers=np;
        this.colore=color;
        this.prezzobase=pb;
        this.Tipostampa=tipo;
        this.PrezzoUnitario=pu;
    }
    
            public double CalcoloPU(String m, int nrpers, boolean p, String color, String tipo, String materiale){
    if (!"Bianco".equals(color))
            this.PrezzoUnitario+=1.00;
    if ("Pelle".equals(materiale))
            this.PrezzoUnitario+=7.00;
    if (p==true){
         if(tipo=="Serigrafia")
             this.PrezzoUnitario+=2.00*nrpers;
         if(tipo=="Transfer")
             this.PrezzoUnitario+=3.00*nrpers;
         if(tipo=="Digitale")
             this.PrezzoUnitario+=4.00*nrpers;
    }

    return this.PrezzoUnitario;
        }

}
